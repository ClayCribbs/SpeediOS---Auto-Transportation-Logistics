<p id="notice"><%= notice %></p>
<div class="col-sm-10 col-sm-offset-1">
<h1>Delivery Trucks</h1>
</div>
<div class="row">    
    <% @delivery_trucks.each do |delivery_truck| %>
        <div class="col-sm-5 col-sm-offset-1">
            <div class="well">
            <table>
                <tr>
                <td width="77%"><h3><%= delivery_truck.name %></h3></td>
                </tr>

                <tr>
                <td>Vin Number:</td>
                <td><%= delivery_truck.vinNumber %></td>
                </tr>

                <tr>
                <td>Year Manufactured:</td>
                <td><%= delivery_truck.yearManufactured %></td>
                </tr>

                <tr>
                <td>Make:</td>
                <td><%= delivery_truck.make %></td>
                </tr>

                <tr>
                <td>Model:</td>
                <td><%= delivery_truck.model %></td>
                </tr>

                <tr>
                <td>Current Location:</td>
                <td><%= delivery_truck.currentLocation %></td>
                </tr>

                <tr>
                <td>Weight Capacity:</td>
                <td><%= delivery_truck.weightCapacity %></td>
                </tr>

                <tr>
                <td>Average MPG:</td>
                <td><%= delivery_truck.avgMPG %></td>
                </tr>

                <tr>
                <td>Scheduled Departure Date:</td>
                <td><%= delivery_truck.scheduledDepartureTime %></td>
                </tr>
                </table>

                <p>
                <%= link_to 'Show', delivery_truck %>
                <%= link_to 'Edit', edit_delivery_truck_path(delivery_truck) %>
                <%= link_to 'Destroy', delivery_truck, method: :delete, data: { confirm: 'Are you sure?' } %></p>

            </div>
        </div>
    <% end %>
</div>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="well">
            <%= link_to 'New Delivery Truck', new_delivery_truck_path %>
        </div>
    </div>
</div>
