<style>
    /* Appearance */
    body, table { font-family: sans-serif; }
    table { border-collapse: collapse; }
    td, th { padding: 6px; }
    th { background: #333; color: white; }
    tbody tr:nth-child(odd) { background: #dfdfdf; }

    
    /* Scrollability of table */
    table { width: 100%; } /* fixed width table */
    thead tr { display: block; } /* makes it sizeable */
    tbody { 
      display: block; /* makes it sizeable */
      height: 200px; /* height of scrollable area */
      overflow: scroll;
      padding: 1px; /* scroll rather than overflow */
      width: 100%; /* fill the box */
    }
    thead th { width: 250px; } /* fixed width for THs */
    tbody td { width: 234px; } /* fixed width for TDs */
    /* the tbody needs to be 16px less than the thead, for the scrollbar */

</style>

<body  class= "bioRhyme">
<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-sm-10 col-sm-offset-1 padleft">
<h1>Vehicles Ready For Dispatch</h1>
</div>
</div>


<div class="container">
  <div class="row-fluid">
    <div class="well">

      <ul class="nav nav-tabs">
        <li class="active"> <a href="#home" data-target="#home" data-toggle="tab">Suggested Contracts</a></li>
        <li><a href="#maptab" data-target="#routetab" data-toggle="tab">List All Contracts</a></li>
        <li><a href="#cargo" data-target="#cargo" data-toggle="tab">Contracts By Location</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="home"> 
          <table class="sortable">
            <thead>
              <tr><th>Car Name</th>
              <th>Origin</th>
              <th>Destination</th>
              <th>Miles</th>
              <th>Bid</th></tr>
            </thead>
            <tbody>
              <% @vehicles.each do |vehicle| %>
              <% if vehicle.truckId == 'nil' or vehicle.truckId.empty? %>
                <tr>
                  <td><%= link_to "#{vehicle.yearManufactured} #{vehicle.make} #{vehicle.model}".split.map(&:capitalize).join(' '), vehicle %></td>
                  <td><%=vehicle.origin%></td>
                  <td><%=vehicle.destination%></td>
                  <td><%=vehicle.distance%></td>
                  <td>$<%=vehicle.distance%></td>
                <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="tab-pane" id="routetab"> 
 
          <table class="sortable">
            <thead>
              <tr><th>Car Name</th>
              <th>Origin</th>
              <th>Destination</th>
              <th>Miles</th>
              <th>Bid</th></tr>
            </thead>
            <tbody>
              <% @vehicles.each do |vehicle| %>
                <tr>
                  <td><%= link_to "#{vehicle.yearManufactured} #{vehicle.make} #{vehicle.model}".split.map(&:capitalize).join(' '), vehicle %></td>
                  <td><%=vehicle.origin%></td>
                  <td><%=vehicle.destination%></td>
                  <td><%=vehicle.distance%></td>
                  <td>$<%=vehicle.distance%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      <div class="tab-pane" id="cargo">  
      </div>
    </div>
</div>
<div class="row" margin-top="0px">
  <div class="col-sm-12">
    <div class="well">
      <i> 
        <%= link_to(image_tag("carHauler-btn.png", class: 'image-responsive'), new_vehicle_path,  :method => :get) %>
        <br>
        <%= link_to 'New Vehicles', new_vehicle_path %>
      </i>
    </div>
  </div>
</div>



</body>

