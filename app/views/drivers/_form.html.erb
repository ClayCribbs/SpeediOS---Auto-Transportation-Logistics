_form.html.erb

<script src="sorttable.js"></script>

<%= form_for(driver) do |f| %>
  <% if driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
      <% driver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :driver_name, placeholder: "Driver Name" %>
  </div>

  <div class="form-group">
    <%= f.text_field :driver_id, placeholder: "Driver ID" %>
  </div>

  <div class="form-group">
    <%= f.text_field :driver_dob, placeholder: "Driver D.O.B." %>
  </div>

  <div class="form-group">
    <%= f.text_area :driver_address, placeholder: "Driver Address" %>
  </div>

  <div class="form-group">
    <%= f.text_field :email, placeholder: "Driver Email" %>
  </div>

  <div class="form-group">
    <%= f.number_field :phone_number, placeholder: "Phone Number" %>
  </div>

  <div class="form-group">
    <%= f.number_field :trailer_capacity, placeholder: "Trailer Capacity" %>
  </div>

  <div class="form-group">
    <strong>Upload Vehicle Image: </strong>
    <%= f.file_field :image %>
  </div>


  <div class="actions">
    <%= f.button :Submit, class: "btn btn-success" %>
  </div>
<% end %>
