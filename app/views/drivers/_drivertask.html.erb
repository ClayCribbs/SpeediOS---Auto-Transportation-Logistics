<script src="sorttable.js"></script>

<div class="col-md-12">
		<div class="well">

			<h3>
				<%= link_to driver.description, driver, remote: true, method: :delete, data: { confirm: "Are you sure?" } %>
			</h3> 
			<p>
				<%= driver.deadline %>
			</p>  
			<p class="pull-right">
				<%= link_to edit_driver_path(driver), remote: true do %>
			
			<i class="fa fa-pencil"></i>Edit
			<% end %>
				<%= link_to driver, remote: true, method: :delete, data: { confirm: 'Are you sure?' } do %>
			<i class="fa fa-trash"></i>Delete
		<% end %>	
 		</p>  
	</div>
</div>