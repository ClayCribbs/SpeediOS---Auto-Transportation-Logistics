   table { width: 100%; } /* fixed width table */
     thead tr { width: 100%; } /* makes it sizeable */
     tbody { 
       max-height: 350px; /* height of scrollable area */
       overflow: scroll;
       padding: 1px; /* scroll rather than overflow */
      width: 100%; /* fill the box */
     }
     thead th { width: 250px; } /* fixed width for THs */
     tbody td { width: 250px; } /* fixed width for TDs */
